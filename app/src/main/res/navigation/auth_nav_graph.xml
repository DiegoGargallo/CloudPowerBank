<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/auth_nav_graph"
            app:startDestination="@id/authFragment">
    <fragment
            android:id="@+id/authFragment"
            android:name="es.diegogargallotarin.cloudpowerbank.ui.auth.AuthFragment"
            android:label="auth_fragment"
            tools:layout="@layout/auth_fragment">
        <action
                android:id="@+id/action_authFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:enterAnim="@anim/fui_slide_in_right"
                app:exitAnim="@anim/fui_slide_out_left"
                app:popEnterAnim="@anim/fui_slide_in_right"
                app:popExitAnim="@anim/fui_slide_out_left"
                app:popUpTo="@+id/auth_nav_graph"
                app:popUpToInclusive="true"/>
        <action
                android:id="@+id/action_authFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:enterAnim="@anim/fui_slide_in_right"
                app:exitAnim="@anim/fui_slide_out_left"
                app:popEnterAnim="@anim/fui_slide_in_right"
                app:popExitAnim="@anim/fui_slide_out_left"
                app:popUpTo="@+id/auth_nav_graph"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment
            android:id="@+id/registerFragment"
            android:name="es.diegogargallotarin.cloudpowerbank.ui.auth.RegisterFragment"
            android:label="RegisterFragment">
        <deepLink app:uri="www.cloudpowerbank.com/register"/>
    </fragment>
    <fragment
            android:id="@+id/loginFragment"
            android:name="es.diegogargallotarin.cloudpowerbank.ui.auth.LoginFragment"
            android:label="LoginFragment">
        <deepLink app:uri="www.cloudpowerbank.com/login"/>
    </fragment>
</navigation>